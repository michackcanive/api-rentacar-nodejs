{
  "compilerOptions": {

    
    "target": "es2016",                                  
    "experimentalDecorators": true,                  
    "emitDecoratorMetadata": true,                    
    
    "module": "commonjs",                               
    
     "baseUrl": "./src",                                  
       "paths": {
         "@config/*":["config/*"],
         "@modules/*":["modules/*"],
         "@shared/*":["shared/*"],
         "@errors/*":["errors/*"]
       },                                   
    "resolveJsonModule": true,                       
    "esModuleInterop": true,                             
    "forceConsistentCasingInFileNames": true,            

    "strict": false,                                      
    "skipLibCheck": true                                 
  }
}
